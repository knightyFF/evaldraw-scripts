loadimg(im[imax][imax])
{
   static r,g,b;
   getpicsiz(&lx,&ly);
   if(lx>imax)lx=imax;if(ly>imax)ly=imax;
   for(y=0;y<ly;y++)
      for(x=0;x<lx;x++){
         pic(x,y,&r,&g,&b);
         im[y][x]=1/256*(r*0.3+0.55*g+0.15*b);
      }
}
showimg(im[imax][imax])
{
   for(y=0;y<ly;y++)
      for(x=0;x<lx;x++){
         r=im[y][x]*256;
         setcol(r,r,r);
         setpix(x,y);
      }
}
diffimg(in1[imax][imax],in2[imax][imax],out[imax][imax])
{
   for(y=0;y<ly;y++)
      for(x=0;x<lx;x++) out[y][x]=in1[y][x]-in2[y][x];
}
addimg(in1[imax][imax],in2[imax][imax],out[imax][imax])
{
   for(y=0;y<ly;y++)
      for(x=0;x<lx;x++) out[y][x]=in1[y][x]+in2[y][x];
}
sclimg(m,s,in[imax][imax],out[imax][imax])
{
   for(y=0;y<ly;y++)
      for(x=0;x<lx;x++) out[y][x]=m*in[y][x]+s;
}

//Verifier le cas ou siz>=lx: ce serra different!!!
bconvolvex(siz,in[imax][imax],out[imax][imax])
{
   if(siz<1){
      sclimg(1,0,in,out);return;
   }
   siz=floor(siz);
   d=1/(2*siz+1);
   for(y=0;y<ly;y++){
      m=0;
      for(x=-siz;x<0;x++){
         m+=in[y][x+siz];
      }
      for(x=0;x<siz;x++){
         m+=in[y][x+siz];
         out[y][x]=m*d;
      }
      for(x=siz;x<lx-siz;x++){
         m+=in[y][x+siz];
         out[y][x]=m*d;
         m-=in[y][x-siz];
      }
      for(x=lx-siz;x<lx;x++){
         out[y][x]=m*d;
         m-=in[y][x-siz];
      }
   }
}
bconvolvey(siz,in[imax][imax],out[imax][imax])
{
   if(siz<1){
      sclimg(1,0,in,out);return;
   }
   siz=floor(siz);
   d=1/(2*siz+1);
   for(x=0;x<lx;x++){
      m=0;
      for(y=-siz;y<0;y++){
         m+=in[y+siz][x];
      }
      for(y=0;y<siz;y++){
         m+=in[y+siz][x];
         out[y][x]=m*d;
      }
      for(y=siz;y<ly-siz;y++){
         m+=in[y+siz][x];
         out[y][x]=m*d;
         m-=in[y-siz][x];
      }
      for(y=ly-siz;y<ly;y++){
         out[y][x]=m*d;
         m-=in[y-siz][x];
      }
   }
}
bconvolve(siz,in[imax][imax],out[imax][imax])
{
   static img[imax][imax];
   bconvolvex(siz,in,img);
   bconvolvey(siz,img,out);
}