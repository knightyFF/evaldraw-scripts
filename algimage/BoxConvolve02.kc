static lx,ly;
static boxsiz;
()
{
   static img0[1024][1024];
   static img1[1024][1024];
   static img2[1024][1024];
   static sig,tol,siz;
   if(numframes==0){
      loadimg(img0);
      siz=5;
      bconvolve(siz,img0,img1);
      //bconvolve(siz,img1,img0);
      //bconvolve(siz,img0,img1);
      //diffimg(img0,img1,img2);
      //sclimg(1,0.5,img2,img2);
